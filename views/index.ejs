<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToDos!</title>
  </head>
  <body>
    <h1>ToDos!</h1>

    <a href="/">Zobrazit vše</a>
    <a href="?done=false">Pouze nesplněné</a>
    <a href="?done=true">Pouze splněné</a>

    <table>
      <% for (const todo of todos) { %>
        <tr>
          <td>
            <%= todo.title %>
          </td>
          <td>
            <%= todo.deadline ? todo.deadline : 'bez termínu' %>
          </td>
          <td>
            <a href="/detail-todo/<%= todo.id %>">
              Detail
            </a>
          </td>
          <td>
            <a href="/toggle-todo/<%= todo.id %>">
              <%= todo.done ? 'Hotovo' : 'Nesplněno' %>
            </a>
          </td>
          <td>
            <a href="/remove-todo/<%= todo.id %>">
              Odebrat
            </a>
          </td>
        </tr>
      <% } %>
      </table>

    <form method="post" action="/new-todo">
      <input type="text" name="title">
      <input type="date" name="deadline" >
      <button type="submit">Přidat TODO</button>
    </form>
  </body>
</html>
